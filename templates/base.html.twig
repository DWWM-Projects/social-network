<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}My Social Network{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        <script src="https://cdn.tailwindcss.com?plugins=forms,typography,aspect-ratio,line-clamp"></script>

        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>

    {% block header %}
        <div class="w-full flex justify-between items-center bg-blue-300 text-white p-6">
            <div class="flex flex-row items-center">
                <h1 class="text-5xl ml-6">My Social Network</h1>
                <ul class="flex flex-row gap-6 text-3xl ml-6">
                    <li class="hover:text-blue-900 {{ app.request.get('_route') == 'app_home' ? 'active' }}">
                        <a href="{{ path('app_home') }}">Publications</a>
                    </li>
                    <li class="hover:text-blue-900 {{ app.request.get('_route') == 'app_home' ? 'active' }}">
                        <a href="">Membres</a>
                    </li>
                </ul>
            </div>

            <div class="mr-6">
                <ul class="flex flex-row gap-6 text-3xl">
                    <li class="hover:text-blue-900 {{ app.request.get('_route') == 'app_home' ? 'active' }}">
                        <a href="">Inscription</a>
                    </li>
                    <li class="hover:text-blue-900 {{ app.request.get('_route') == 'app_home' ? 'active' }}">
                        <a href="">Connexion</a>
                    </li>
                </ul>
            </div>
        </div>
    {% endblock %}
    <body>
        {% block body %}{% endblock %}
    </body>
</html>
