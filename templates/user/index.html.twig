{% extends 'base.html.twig' %}

{% block title %}Membres - My Social Network{% endblock %}

{% block header %} {{ parent() }} {% endblock %}

{% block body %}

    <h1 class="text-4xl text-center my-6">Les Membres</h1>

    <div class="flex flex-row gap-2 justify-around">
        {% if app.user %}        
            <div class="w-1/6 flex flex-col bg-blue-300 border rounded-lg mt-6 p-2">
                <div class=" bg-blue-100 border rounded-lg p-2">
                    {% if app.user.avatar == null %}
                        <img src="/img/avatar.png">
                    {% endif %}
                </div>

                <div class="flex flex-col bg-blue-100 border rounded-lg mt-6 p-2">
                    <p class="mt-4">{{ app.user.pseudo }}</p>
                    <p class="mt-4">{{ app.user.biography }}</p>
                </div>
            </div>
        {% endif %}

        <div class="w-4/5 mx-auto flex flex-col">
            {% for user in users %}
                <a class="w-full flex flex-row gap-2 bg-blue-300 border rounded-lg mt-6 p-2 cursor-pointer" href="{{ path('app_member', { id: user.id }) }}">
                    <div class="w-1/6 rounded-lg bg-blue-100 p-2">
                        {% if user.avatar == null %}
                        <img src="/img/avatar.png">
                    {% endif %}
                    </div>

                    <div class="w-5/6 flex flex-col rounded-lg bg-blue-100 p-2">
                        <p>Pseudo: {{ user.pseudo }}</p>
                        <p class="w-full mt-2">Biographie: {{ user.biography }}</p>
                    </div>

                </a>
            {% endfor %}
        </div>
    </div>
{% endblock %}
